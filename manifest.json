{
  "manifest_version": 2,
  "name": "页面工具",
  "version": "1.0.0",
  "description": "页面工具",
  "icons": {
    "16": "images/icon_16.png",
    "32": "images/icon_32.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "页面工具",
    "default_icon": {
      "16": "images/icon_16.png",
      "32": "images/icon_32.png",
      "48": "images/icon_48.png",
      "128": "images/icon_128.png"
    }
  },
  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "contextMenus",
    "sessions"
  ],
  "chrome_url_overrides": {
    "newtab": "newTab.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": ["js/gesture.js"],
      "css": ["css/gesture.css"],
      "run_at": "document_start"
    }
  ],
  "options_page": "options.html",
  "web_accessible_resources": ["images/*"]
}