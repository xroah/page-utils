{
  "manifest_version": 2,
  "name": "页面工具",
  "version": "1.0.0",
  "description": "页面工具",
  "icons": {
    "16": "images/icon_16.png",
    "32": "images/icon_32.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "页面工具",
    "default_icon": {
      "16": "images/icon_16.png",
      "32": "images/icon_32.png",
      "48": "images/icon_48.png",
      "128": "images/icon_128.png"
    }
  },
  "permissions": [
    "tabs",
    "storage",
    "webRequest",
    "contextMenus",
    "topSites",
    "http://*/*", // 可以通过executeScript或者允许跨域的网站
    "https://*/*" // 可以通过executeScript或者允许跨域的网站
  ],
  "chrome_url_overrides": {
    "newtab": "newTab.html"
  }
}