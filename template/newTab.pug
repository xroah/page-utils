doctype html
html
    head
        meta(charset="utf-8")
        title 新标签页
    body
        #bg.background
        section.main-container
            p#sentence.daily-sentence.scale-invisible
            .search-wrapper
                - 
                    var engines = [ 
                        {
                            name: "必应", 
                            url: "https://cn.bing.com/search?q="
                        }, {
                            name: "百度", 
                            url: "https://www.baidu.com/s?wd="
                        }, {
                            name: "搜狗", 
                            url: "https://www.sogou.com/web?query="
                        }, {
                            name: "360", 
                            url: "https://www.so.com/s?q="
                        }, {
                            name: "谷歌", 
                            url: "https://www.google.com/search?q="
                        }
                    ]
                select#searchEngine.search-engine
                    each val in engines
                        option(value=val.url) #{val.name}
                input#keywords.keywords(type="text")
                button#search.search(type="button")
            span#copyright.copyright