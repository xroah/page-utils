doctype html
html
    head
        meta(charset="utf-8")
        title 新标签页
    body
        #bg.background
        .quick-link-wrapper
            button.toggle-quick-link.transition#toggleLink
            ul.quick-list#quickList
                -
                    var links = [{
                        class: "quick-link-item apps-link",
                        text: "Apps",
                        href: "chrome://apps"
                    }, {
                        class: "quick-link-item bookmark-link",
                        text: "书签",
                        href: "chrome://bookmarks"
                    }, {
                        class: "quick-link-item history-link",
                        text: "历史记录",
                        href: "chrome://history"
                    }, {
                        class: "quick-link-item download-link",
                        text: "下载记录",
                        href: "chrome://downloads"
                    }, {
                        class: "quick-link-item google-chrome-link",
                        text: "扩展",
                        href: "chrome://extensions"
                    }, {
                        class: "quick-link-item settings-link",
                        text: "浏览器设置",
                        href: "chrome://settings"
                    }]
                each val in links
                    li
                        button(data-href=val.href class=val.class) #{val.text}
        section.main-container
            .date-time-info
                span#time  15:35:26
                span#date 5月10日 星期日
            .search-wrapper
                - 
                    var engines = [ 
                        {
                            name: "必应", 
                            url: "https://cn.bing.com/search?q="
                        }, {
                            name: "百度", 
                            url: "https://www.baidu.com/s?wd="
                        }, {
                            name: "搜狗", 
                            url: "https://www.sogou.com/web?query="
                        }, {
                            name: "360", 
                            url: "https://www.so.com/s?q="
                        }, {
                            name: "谷歌", 
                            url: "https://www.google.com/search?q="
                        }
                    ]
                select#searchEngine.search-engine
                    each val in engines
                        option(value=val.url) #{val.name}
                input#keywords.keywords(type="text")
                button#search.search(type="button")
        .top-sites#topSites

        span#copyright.copyright
        p#sentence.daily-sentence.scale-invisible